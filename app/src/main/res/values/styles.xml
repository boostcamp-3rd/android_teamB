<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv.round">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/aller_default</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">@dimen/sign_in_et_width</item>
        <item name="android:layout_height">@dimen/sign_in_et_height</item>
        <item name="android:textSize">@dimen/sign_in_et_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="tv.accent">
        <item name="android:background">@drawable/tv_accent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/aller_default</item>
        <item name="android:layout_width">@dimen/sign_in_et_width</item>
        <item name="android:layout_height">@dimen/sign_in_et_height</item>
        <item name="android:textSize">@dimen/sign_in_et_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv.accent.small">
        <item name="android:layout_width">@dimen/write_tv_width</item>
        <item name="android:layout_height">@dimen/write_tv_height</item>
        <item name="android:textSize">@dimen/write_tv_text_size</item>
    </style>

    <style name="tv.menu">
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/tv_background_menu</item>
        <item name="android:textColor">@color/colorMenu</item>
    </style>

    <style name="iv">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="iv.round">
        <item name="android:background">@drawable/circular_image_view</item>
    </style>

</resources>
